{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "types": [
    "babylonjs",
    "babylonjs-gui",
    "babylonjs-materials",
    "babylonjs-loaders",
    "babylonjs-inspector"
  ]
}
